<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 <com.teachinginformationmanagementsystem.util.TitleLayout
   	    android:id="@+id/titlelayout_addmes"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
	</com.teachinginformationmanagementsystem.util.TitleLayout>  
   	<EditText
	    android:id="@+id/et_addmes_content"
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:minLines="7"
    	android:maxLines="7"
    	android:inputType="textMultiLine"
    	android:scrollbars="vertical"
    	android:gravity="top"
        android:layout_marginTop="20dip"
    	android:background="@drawable/selector_edittext"
    	android:hint="通知内容"/>
	    <requestFocus />
	    
	<LinearLayout
	    android:layout_width="match_parent"
        android:layout_height="wrap_content">
	    
	    <Button 
	        android:id="@+id/btn_addmes_ok"
	        android:layout_width="0dp"
	        android:layout_weight="1.0"
	        android:layout_height="wrap_content"
	        android:layout_margin="10dp"
	        android:background="#90d7ec"
	        android:text="确定"
	        android:textColor="#ffffff"/>
	    <Button 
	        android:id="@+id/btn_addmes_cancel"
	        android:layout_width="0dp"
	        android:layout_weight="1.0"
	        android:layout_height="wrap_content"
	        android:layout_margin="10dp"
	        android:background="#90d7ec"
	        android:text="取消"
	        android:textColor="#ffffff"/>
	    </LinearLayout>
</LinearLayout>

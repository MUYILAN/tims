<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

	    <EditText
	        android:id="@+id/teareg_user_acc"
	        android:layout_width="match_parent"
    		android:layout_height="40dp"
    		android:layout_marginTop="25dp"
    		android:singleLine="true"
    		android:background="@drawable/selector_edittext"
    		android:hint="账号"/>
	    <requestFocus />

	    <Spinner 
	   		android:id="@+id/teareg_user_title"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:entries="@array/teatitles"/>
	    

	    <EditText
	        android:id="@+id/teareg_user_name"
	        android:layout_width="match_parent"
    		android:layout_height="40dp"
    		android:singleLine="true"
    		android:background="@drawable/selector_edittext"
    		android:hint="姓名"/>

		<LinearLayout
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content" >
    	<TextView 
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_gravity="center"
	    	    android:text="性别:"/>
			<RadioGroup 
	   		 android:id="@+id/teareg_user_sex"
	   		 android:layout_width="wrap_content"
	   		 android:layout_height="wrap_content"
	   		 android:orientation="horizontal"
	   		 android:checkedButton="@+id/teareg_user_sex_male">
	   		 
		    <RadioButton 
		        android:id="@+id/teareg_user_sex_male"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="男"/>
		    
		    <RadioButton 
		        android:id="@+id/teareg_user_sex_female"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="女"/>
		</RadioGroup>
	</LinearLayout>

	    <EditText
	        android:id="@+id/teareg_user_tel"
	        android:layout_width="match_parent"
    		android:layout_height="40dp"
    		android:singleLine="true"
    		android:background="@drawable/selector_edittext"
    		android:hint="电话"/>

	
	    <EditText
	        android:id="@+id/teareg_user_passwd"
	        android:layout_width="match_parent"
    		android:layout_height="40dp"
    		android:singleLine="true"
    		android:background="@drawable/selector_edittext"
    		android:hint="密码"
    		android:inputType="textPassword"/>

	    <EditText
	        android:id="@+id/teareg_user_passwd0"
	        android:layout_width="match_parent"
    		android:layout_height="40dp"
    		android:singleLine="true"
    		android:background="@drawable/selector_edittext"
    		android:hint="确认密码"
    		android:inputType="textPassword"/>
	
 	<Button
 	    android:id="@+id/teareg_ok"
 	    android:layout_width="match_parent"
 	    android:layout_height="wrap_content"
 	    android:textColor="#ffffff"
 	    android:background="#90d7ec"
 	    android:layout_margin="20dp"
 	    android:text="注册">
 	   
 	</Button>

</LinearLayout>


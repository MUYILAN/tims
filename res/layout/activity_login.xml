<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   	<com.teachinginformationmanagementsystem.util.TitleLayout
   	    android:id="@+id/titlelayout_login"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
	></com.teachinginformationmanagementsystem.util.TitleLayout>
    
	    <EditText
	        android:id="@+id/user_acc"
	        android:layout_width="match_parent"
    		android:layout_height="40dp"
    		android:layout_marginTop="25dp"
    		android:singleLine="true"
    		android:inputType="number"
    		android:background="@drawable/selector_edittext"
    		android:hint="账号"/>
	    
	    <requestFocus />
	    <EditText
	        android:id="@+id/user_passwd"
	        android:layout_width="match_parent"
    		android:layout_height="40dp"
    		android:singleLine="true"
    		android:background="@drawable/selector_edittext"
    		android:inputType="textPassword"
    		android:hint="密码" />
	
	<LinearLayout
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content" >
	    
		<RadioGroup 
	   		 android:id="@+id/user_type"
	   		 android:layout_width="wrap_content"
	   		 android:layout_height="wrap_content"
	   		 android:orientation="horizontal"
	   		 android:checkedButton="@+id/user_type_tea">
	   		 
		    <RadioButton 
		        android:id="@+id/user_type_tea"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:text="教师"/>
		    
		    <RadioButton 
		        android:id="@+id/user_type_stu"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:text="学生"/>
		</RadioGroup>
		
			
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    
	    <TextView 
	        android:id="@+id/tv_rempasswd"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="记住密码"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"/>
	    <CheckBox 
	        android:id="@+id/cb_rempasswd"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@id/tv_rempasswd"/>

	</RelativeLayout>
	</LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
        android:layout_height="wrap_content">
		
	    <Button 
	        android:id="@+id/login"
	        android:layout_width="0dp"
	        android:layout_weight="1.0"
	        android:layout_height="wrap_content"
	        android:layout_margin="10dp"
	        android:background="#90d7ec"
	        android:text="登录"
	        android:textColor="#ffffff"/>
	    <Button 
	        android:id="@+id/register"
	        android:layout_width="0dp"
	        android:layout_weight="1.0"
	        android:layout_height="wrap_content"
	        android:layout_margin="10dp"
	        android:background="#90d7ec"
	        android:text="注册"
	        android:textColor="#ffffff"/>
    </LinearLayout>
</LinearLayout>
